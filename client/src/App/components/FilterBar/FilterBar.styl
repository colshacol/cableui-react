.FilterBar {
  flex-direction: column;
  background: var(--darkest);
  box-shadow: 0 0 12px rgba(0,0,0,0.25);

  > .container {
    width: 100%;
    margin: 0 auto;
    flex-direction: column;
    justify-content: center;
    z-index: 99;
    position: relative;

    .search {
      z-index: 100;
      height: 65px;
      width: calc(100% - 60px);
      margin: 0 auto;
      align-items: center;
      padding: 15px 0 15px;
      background: var(--darkest);

      .SearchIcon {
        width: 20px;
        height: 20px;
      }

      input {
        background: none;
        color: var(--gray0);
        font-size: 1.4rem;
        margin-left: 15px;
        padding-right: 15px;
        padding-bottom: 2px;
        width: 100%;
        letter-spacing: 2px;
        height: 45px;
        font-family:  var(--font0);
        position: relative;
        top: 3px;

        &::-webkit-input-placeholder {
          color: var(--gray0);
          font-size: 1.4rem;
          font-weight: 300;
          font-family: var(--font0);
          letter-spacing: 2px;
        }
      }

      .mini-button {
        min-width: 60px;
        cursor: pointer;
        justify-content: center;
        align-items: center;
        background: white;
        border-radius: 12px;
        padding: 5px 8px 4px;
        margin-left: 20px;

        p {
          letter-spacing: 1px;
          color: var(--gray0);
          font-size: 1rem;
        }
      }

      .ArrowIcon {
        width: 20px;
        height: 20px;
        transform: rotate(90deg);
      }
    }
  }
}

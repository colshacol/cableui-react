.LocationOverview {
  flex-direction: row;
  width: 30%;
  margin: 1.4%;
  max-height: 250px;
  overflow: hidden;

  @media screen and (max-width: 1019px) {
    width: 45.5%;
  }

  @media screen and (max-width: 779px) {
    width: 95%;
  }

  .health-0 {
    width: 100%;
    height: 5px;
    background: var(--red0);
  }

  .health-1 {
    width: 100%;
    height: 5px;
    background: var(--orange0);
  }

  .health-2 {
    width: 100%;
    height: 5px;
    background: var(--green0);
  }

  & > .container {
    background: var(--dark0);
    padding: 20px 0;
    width: 100%;
    position: relative;
    left: -200%;
    top: 3px;

    .basic {
      flex-direction: column;
      width: 100%;
    }

    .subtitle {
      font-size: 1.1rem;
      color: var(--gray0)
      text-transform: uppercase;
      width: 100%;
      font-weight: 300;
      letter-spacing: 1px;
      text-align: center;
      // margin-bottom:2px;
    }

    .location-city {
      width: 100%;
      padding: 0 10px 10px;
      // background: var(--darkest);
      font-weight: 300;
      font-size: 1.6rem;
      color: var(--gray0)
      text-transform: uppercase;
      letter-spacing: 1px;
      text-align: center;
    }
  }
}

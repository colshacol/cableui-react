.NavColumn {
  height: 100%;
  width: 245px;
  padding: 0 40px 0 35px;
  z-index: 100;

  .container {
    min-height: 100%;
    padding: 30px 0;
    flex-direction: column;
    overflow-y: scroll;
    // box-shadow: 0 0 12px rgba(0,0,0,0.25);

    &::-webkit-scrollbar {
      width: 2px;
    }

    &::-webkit-scrollbar-track {
        background: var(--dark2);
    }

    .logo {
      flex-wrap: wrap;
      height: 45px;
      margin-bottom: 45px;

      p:first-of-type {
        cursor: pointer;
        font-size: 2rem;
        letter-spacing: 2px;
        width: 100%;
        margin-bottom: 3px;

        &:first-letter {
          // color: var(--red0);
        }
      }
      p:last-of-type {
        font-size: 1.2rem;
        font-style: italic;
        color: var(--gray0);
        font-family: 'Helvetica';

        span {
          cursor: pointer;
        }
      }
    }

    .navigation {
      flex-direction: column;
    }

    .nav-list {
      padding-bottom: 25px;
      flex-direction: column;
      width: 165px;

      .title {
        font-size: 1.8rem;
        margin-bottom: 10px;
      }

      ul {
        list-style-type: none;
        margin-bottom: 25px;


        li {
          cursor: pointer;
          box-sizing: border-box;
          padding: 11px 0 10px;
          display: flex;
          position: relative;
          justify-content: space-between;
          align-items: center;

          p {
            font-size: 1.4rem;
            color: var(--gray0);
            font-weight: 300;
          }

          .circle {
            // width: 22px;
            // height: 22px;
            // border-radius: 50%;
            // background: var(--gray0);
            align-items: center;
            justify-content: center;


            p {
              color: var(--gray0);
              font-family: 'Helvetica';
              font-size: 1.25rem;
              font-weight: 600;
              position: relative;
              top: 1px;
              right: 0.5px;
            }
          }

          &:hover {
            p {
              color: white;
            }

            .circle {
              p {
                color: white;
              }
            }
          }
        }
      }
    }


  }
}
